      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Cedula</th>
            <th scope="col">edad</th>
            <th scope="col">Semestre</th>
            <th scope="col">Modalidad</th>
            <th scope="col">Nota1</th>
            <th scope="col">Nota2</th>
            <th scope="col">Nota3</th>
            <th scope="col">Nota4</th>
            <th scope="col">Examen</th>
          </tr>
        </thead>
        <tbody id="tablaEstudiantes"></tbody>
      </table>

      <script>
        let estudiantes = [];

        function agregar() {
          let nombre = document.getElementById("nombre").value.trim();
          let apellido = document.getElementById("apellido").value.trim();
          let cedula = document.getElementById("cedula").value.trim();
          let edad = parseInt(document.getElementById("edad").value.trim());
          let semestre = document.getElementById("semestre").value;

          let modalidad = document.querySelector('input[name="modalidad"]:checked');
          if (!modalidad) {
            alert("Selecciona una modalidad.");
            return;

          }
           let nota1 = parseFloat (document.getElementById("nota1").value);
            let nota2 = parseFloat (document.getElementById("nota2").value);
            let nota3 = parseFloat (document.getElementById("nota3").value);
            let nota4 = parseFloat (document.getElementById("nota4").value);
            let examen = parseFloat (document.getElementById("examen").value);

            if (nombre && apellido && cedula && edad && semestre){
              estudiantes.push ({
                nombre,
                apellido,
                cedula,
                edad: parseInt (edad),
                semestre,
                modalidad: modalidad.value,
                nota1,
                nota2,
                nota3,
                nota4,
                examen,
              })
              document.getElementById("formulario").reset();
              mostrar()
            }else {
              alert ("complete los campos")
            }
        }

        function mostrar(){
          let tbody = document.getElementById("tablaEstudiantes");
          tbody.innerHTML = ""
          for (let i = 0; i < estudiantes.length; i++) {
            const est = estudiantes[i];
            let fila = 
              "<tr>" +
              "<td>" + (i+1) + "<td>" 
              "<td>" + est.nombre + "<td>" 
              "<td>" + est.apellido + "<td>" 
                



          
              tbody.innerHTML += fila;

            
          }

        }

      </script>
