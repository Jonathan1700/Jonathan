            <label class="form-check-label" for="presencial">Presencial</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="modalidad" id="virtual" value="Virtual">
            <label class="form-check-label" for="virtual">Virtual</label>
          </div>
        </div>
        <div class="row">

          <div class="col-md-2">
            <label for="nota1" class="form-label">Nota 1</label>
            <input type="number" id="nota1" class="form-control" min="0" max="10">
          </div>
          <div class="col-md-2">
            <label for="nota2" class="form-label">Nota 2</label>
            <input type="number" id="nota2" class="form-control" min="0" max="10">
          </div>
          <div class="col-md-2">
            <label for="nota3" class="form-label">Nota 3</label>
            <input type="number" id="nota3" class="form-control" min="0" max="10">
          </div>
          <div class="col-md-2">
            <label for="nota4" class="form-label">Nota 4</label>
            <input type="number" id="nota4" class="form-control" min="0" max="10">
          </div>
          <div class="col-md-2">
            <label for="examen" class="form-label">Examen</label>
            <input type="number" id="examen" class="form-control" min="0" max="60">
          </div>

        </div>

        <div class="col-12">
          <button type="button" class="btn btn-success" onclick="agregar()">Agregar Estudiante</button>
